<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="28dip"
        android:paddingRight="28dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_avatar"/>


        <RelativeLayout
            android:id="@+id/rlUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="40dip"
            android:background="@null">

            <ImageView
                android:id="@+id/ivClearName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/ic_action_clear"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ivClearName"
                android:background="@null"
                android:hint="@string/user_name_hint"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="12dip"
                android:paddingTop="12dip"
                android:textColorHint="@color/newS_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp"/>
        </RelativeLayout>

        <View
            style="@style/list_view_line"
            android:layout_height="1dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            />

        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="20dip"
            android:background="@null">

            <ImageView
                android:id="@+id/ivClearPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/ic_action_clear"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ivClearPassword"
                android:background="@null"
                android:hint="@string/password_hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="12dip"
                android:paddingTop="12dip"
                android:textColorHint="@color/newS_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp"/>
        </RelativeLayout>

        <View
            style="@style/list_view_line"
            android:layout_height="1dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            />

        <Button
            android:id="@+id/btnOk"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="32dp"
            android:background="@color/colorAccent"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>